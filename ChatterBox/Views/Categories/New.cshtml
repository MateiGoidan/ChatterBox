@using ChatterBox.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> MyUserManager

@model Category

<div class="ChatterBox_sitecard">

    @Html.Partial("SideBar", MyUserManager.GetUserAsync(User).Result)

    <div class="ChatterBox_rightPanel">
        <div class="ChatterBox_upperSubPanel">
            <h1>Channels</h1>
            <a class="bi bi-plus-lg ChatterBox_btn_icon" href="/Channels/New"></a>
        </div>
        <div class="ChatterBox_upperSubPanel">
            <h1>New Category</h1>
        </div>
        <div class="ChatterBox_lowerSubPanel"></div>
        <div class="ChatterBox_lowerSubPanel" style="padding: 1vh 1vw;">
            <form asp-controller="Categories" asp-action="New" method="post">

                <h3>Create a new category!</h3>

                <br />

                @Html.Label("Title", "Title: ")
                @Html.TextBox("Title")
                @Html.ValidationMessage("Title")

                <br />
                <br />

                <div class="flex-column">
                    <button class="btn btn-dark ChatterBox_btn_light" style="font-size:20px; margin-right: 1vw;" type="submit">Done</button>
                    <button class="btn btn-danger ChatterBox_btn_del" asp-controller="Categories" asp-action="List">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
